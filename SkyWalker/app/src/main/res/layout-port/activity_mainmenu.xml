<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/sightsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mapButton"
        android:text="SIGHTS"
        android:layout_alignLeft="@+id/mapButton"
        android:layout_alignStart="@+id/mapButton"
        android:layout_alignRight="@+id/mapButton"
        android:layout_alignEnd="@+id/mapButton" />

    <ImageView
        android:id="@+id/imageBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/skywalker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:text="SkyWalker"
        android:textSize="50dp"
        android:textStyle="italic"
        android:textColor="@color/colorPrimary">
    </TextView>


    <Button
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/skywalker"
        android:layout_marginTop="141dp"
        android:text="MAP"
        android:layout_alignLeft="@+id/skywalker"
        android:layout_alignStart="@+id/skywalker"
        android:layout_alignRight="@+id/skywalker"
        android:layout_alignEnd="@+id/skywalker" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sightsButton"
        android:layout_alignLeft="@+id/sightsButton"
        android:layout_alignRight="@+id/sightsButton"
        android:layout_alignStart="@+id/sightsButton"
        android:layout_below="@+id/sightsButton"
        android:text="ABOUT US" />


</RelativeLayout>