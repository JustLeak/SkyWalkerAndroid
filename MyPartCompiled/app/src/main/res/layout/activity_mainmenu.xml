<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/mapButton"
        android:layout_width="match_parent"
        android:layout_height="80dp"


        android:layout_marginTop="300dp"
        android:text="MAP"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="ABOUT US"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/sightsButton"
        android:layout_alignStart="@+id/sightsButton"
        android:layout_alignEnd="@+id/sightsButton" />

    <Button
        android:id="@+id/sightsButton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/mapButton"
        android:layout_marginTop="20dp"
        android:text="SIGHTS" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sky_walker_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="7dp"
        android:layout_alignParentEnd="true" />


</RelativeLayout>